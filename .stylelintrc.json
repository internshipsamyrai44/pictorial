{
  "extends": ["stylelint-config-standard", "stylelint-config-tailwindcss", "stylelint-scss"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "forward", "use", "mixin", "include", "import"]
      }
    ],
    "scss/at-rule-no-unknown": true,
    "import-notation": "string",
    "selector-class-pattern": null
  }
}
